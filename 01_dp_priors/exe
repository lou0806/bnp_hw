#!/bin/bash
# For dp assignment

argnum=$#


if [ "$argnum" -lt "2" ]
then
  echo "You need to enter a file name and an output destination!"
else
  currdir=`pwd`
  file="$1"
  outdir="$2"
  path=`pwd | sed "s|$HOME|\/soe\/alui2|"`
  pathtofile=$path\/$file
  pathtoout=$path\/$outdir
  pathtooutlocal=$currdir\/$outdir
  echo $pathtofile
  echo $pathtoout
  echo $pathtooutlocal
  mkdir -p $pathtooutlocal

#gush
#ssh alui2@citrisdance.soe.ucsc.edu << EOF
#  cd ~/bnp_hw/
#  git pull
#  R CMD BATCH $pathtofile
#  mdkir -p $pathtoout
#EOF
#
#  `scp -r alui2@citrisdance.soe.ucsc.edu:$pathtoout $pathtooutlocal`
fi

